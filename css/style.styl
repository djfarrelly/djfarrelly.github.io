$fontSize = 18px
$fontWeight = 400
$headerLineHeight = 1.4em

$textColor = rgb(63, 63, 63)
$textColorLight = rgb(110, 110, 110)
$linkColor = rgb(1, 87, 155)

$verticalMargin = 1em
$sideMargin = 2em
$maxWidth = 40em

// Base css

html,
body
  width 100%
  height 100%

body
  margin 0
  background #fff

  font-family -apple-system,BlinkMacSystemFont,"Segoe UI",Helvetica,Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji"
  font-size $fontSize
  font-weight $fontWeight
  color $textColor
  -webkit-font-smoothing antialiased

h1,
h2,
h3
  font-weight $fontWeight

a
  position relative
  text-decoration none
  transition all 250ms ease

  &,
  &:visited,
  &:hover,
  &:active
    color $linkColor

  &:hover,
  &:active
    text-decoration underline

p,
small
  max-width $maxWidth


p,
li
  line-height 1.6em

small
  font-size 0.7em

pre
  padding 0.5em 1em
  background desaturate(lighten($linkColor, 94%), 60%)
  font-size 16px


.hidden
  display none !important
  visibility hidden


// Animation

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1


// Main site elements

.site-header
  width 100%
  margin 1em auto
  overflow hidden

  line-height $headerLineHeight

.site-home-link:hover
  text-decoration none

.site-title
  max-width 110px
  padding 0.4em 0.7em
  margin 1em auto
  border 3px solid $textColor
  color $textColor
  font-size 1.1em
  font-weight 700
  text-align center
  white-space nowrap

.site-nav
  display flex
  justify-content center
  align-items center
  flex-wrap wrap
  gap 2rem
  margin 0 auto
  padding 0

  font-size $fontSize
  font-weight 700
  list-style none
  text-align center

  $base = 2000ms
  $delta = 500ms

  for $i in (1...10)
    li:nth-of-type(6n + {$i})
      animation fadeIn $base + $i * $delta

  li
    padding: 0
    transition all 200ms ease-in-out


.site-nav-container
  margin 2rem $sideMargin

.site-content
  width: 90%
  max-width $maxWidth
  margin 0 auto
  font-size 18px
  animation fadeIn 2s

  img
    max-width 100%

.post
  margin: 3rem 0;

.post-header
  margin 1rem 0

.post-title
  margin 0
  line-height 150%

.post-date
  margin 0.5rem 0
  font-size 0.8rem
  color $textColorLight

.post-body
  img
    display block
    max-width 100%
    margin 1em auto

.img-med
  width 440px

.video,
.slides
  position relative
  height 0

.video
  padding-bottom 56.25% // 16:9

.slides
  padding-bottom 62.5% // 16:9

.video iframe,
.slides iframe
  position absolute
  top 0
  left 0
  width 100%
  height 100%


@media (max-width 440px)
  .site-content
    font-size 16px
  .post-title
    font-size 1.8em

